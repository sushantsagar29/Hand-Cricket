<Page
    x:Class="hand_cricket.Assets.gameplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:hand_cricket.Assets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="gameplay.png"/>
        </Grid.Background>

        <Grid x:Name="options" HorizontalAlignment="Left" Height="120" Margin="325,72,0,0" VerticalAlignment="Top" Width="720" Visibility="Visible" >
            
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <Rectangle Height="120" Width="120" Grid.Row="0" Grid.Column="0">
                <Rectangle.Fill>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/fist.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Button x:ConnectionId='0' x:Name="zero" Height="120" Width="120" Grid.Row="0" Grid.Column="0"                    BorderThickness="0" Style="{StaticResource zerosagar}" >
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/fist.png"/>
                </Button.Background>
            </Button>

            <Rectangle Height="120" Width="120" Grid.Row="0" Grid.Column="1">
                <Rectangle.Fill>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Hands-One-finger-icon.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Button x:ConnectionId='0' x:Name="single" Height="120" Width="120" Grid.Row="0" Grid.Column="1"                      BorderThickness="0" Style="{StaticResource sagar}" >
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Hands-One-finger-icon.png"/>
                </Button.Background>
            </Button>

            <Rectangle Height="120" Width="120" Grid.Row="0" Grid.Column="2">
                <Rectangle.Fill>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Hands-Two-fingers-icon.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Button x:ConnectionId='0' x:Name="_double" Height="120" Width="120" Grid.Row="0" Grid.Column="2"                       BorderThickness="0" Style="{StaticResource twosagar}" >
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Hands-Two-fingers-icon.png"/>
                </Button.Background>
            </Button>

            <Rectangle Height="120" Width="120" Grid.Row="0" Grid.Column="3">
                <Rectangle.Fill>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Hands-Three-fingers-icon.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Button x:ConnectionId='0' x:Name="triple" Height="120" Width="120" Grid.Row="0" Grid.Column="3"                      BorderThickness="0" Style="{StaticResource threesagar}">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Hands-Three-fingers-icon.png"/>
                </Button.Background>
            </Button>

            <Rectangle Height="120" Width="120" Grid.Row="0" Grid.Column="4">
                <Rectangle.Fill>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Hands-Four-fingers-icon.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Button x:ConnectionId='0' x:Name="four" Height="120" Width="120" Grid.Row="0" Grid.Column="4"                    BorderThickness="0" Style="{StaticResource foursagar}">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Hands-Four-fingers-icon.png"/>
                </Button.Background>
            </Button>

            <Rectangle Height="120" Width="120" Grid.Row="0" Grid.Column="5">
                <Rectangle.Fill>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Hands-Thumb-up-icon.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Button x:ConnectionId='0' x:Name="six" Height="120" Width="120" Grid.Row="0" Grid.Column="5"                   BorderThickness="0" Style="{StaticResource sixsagar}">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Hands-Thumb-up-icon.png"/>
                </Button.Background>
            </Button>


        </Grid>
        
        
        
    </Grid>
</Page>

